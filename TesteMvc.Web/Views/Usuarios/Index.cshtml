@model IEnumerable<TesteMvc.EF.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Usuários</h2>

<p>
    <button class="btn btn-success create">Novo Usuário <i class="glyphicon glyphicon-open"></i></button>
</p>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
               #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UsuarioId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <button class="btn btn-success details" data-id="@item.UsuarioId">Detalhes</button>
                        <button class="btn btn-primary edit" data-id="@item.UsuarioId">Editar</button>
                        <button class="btn btn-danger delete" data-id="@item.UsuarioId">Remover</button>
                    </div>

                        @*@Html.ActionLink("Edit", "Edit", new { id = item.UsuarioId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.UsuarioId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.UsuarioId })*@
                </td>
            </tr>
        }
    </tbody>

</table>
<div id="modal" class="modal fade "  />
<div id="modal_det" class="modal fade " />
@section scripts{
    <script>
        $(function () {
            $(".details").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Usuarios/Details?id=" + id, function () {
                    $("#modal").modal();
                })
            });
            $(".edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Usuarios/Edit?id=" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".delete").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Usuarios/Delete?id=" + id, function () {
                    $("#modal").modal();
                })
            });

            $(".create").click(function () {
                $("#modal").load("Usuarios/Create", function () {
                    $("#modal").modal();
                })
            });

            $(".det-edit").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("DetalheUsuario/Edit?id=" + id, function () {
                    $("#modal").modal();
                })
            });
            


            })



    </script>
    
    
    }